# Server
PORT=3000
JWT_SECRET=CHANGE_ME_SUPER_LONG_RANDOM
PUBLIC_BASE_URL=http://localhost:3000

# Admin Basic Auth (browser will prompt)
ADMIN_USER=admin
ADMIN_PASS=change_me

# License settings
DEFAULT_TOKENS_ON_CREATE=100
DEVICE_LIMIT=2
# If true: unknown keys will be created on first /activate (handy for testing)
AUTO_CREATE_LICENSE=false

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=usd
# Token packs in format: cents:tokens,cents:tokens
# Example: 500:100,1500:400,2500:800
STRIPE_TOKEN_PACKS=500:100,1500:400,2500:800

# bKash (optional)
# This project includes a MANUAL bKash flow by default (admin verifies TRXID and credits tokens).
BKASH_ENABLED=false
